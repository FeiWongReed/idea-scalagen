<idea-plugin version="2">
  <id>org.github.feiwongreed</id>
  <name>Scalagen, Java to Scala converter</name>
  <version>1.0</version>
  <vendor email="swinepeter@gmail.com" url="https://github.com/FeiWongReed/idea-scalagen">FeiWongReed</vendor>

  <description><![CDATA[
      This plugin allows you to convert Java code in current editor into Scala.<br>
      Default shortcut is <em>Ctrl+K, Ctrl+J</em>
    ]]></description>

  <change-notes><![CDATA[
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="Scalagen.RunScalagen" class="ScalagenClass" text="Scalagen" description="Scalagen">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl K" second-keystroke="ctrl J"/>
    </action>
  </actions>

</idea-plugin>